<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/admin.css">
    <title>Admin - Shows</title>
</head>
<body>

<h1>Manage Shows</h1>

<a href="/admin">
    <button>Back to Admin Home</button>
</a>

<div class="container">
<a href="/admin/add-show">
    <button>Add New Show</button>
</a>

<table border="1">
    <thead>
        <tr>
            <th>Title</th>
            <th>Cast</th>
            <th>Rating</th>
            <th>Duration</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each shows}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.cast}}</td>
                <td>{{this.rating}}</td>
                <td>{{this.duration}}</td>
                <td>
                    <a href="/admin/edit-show/{{this._id}}">Edit</a>
                    <form action="/admin/delete-show/{{this._id}}" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

</body>
</html>
