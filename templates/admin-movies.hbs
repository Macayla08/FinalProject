<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/admin.css">
    <title>Admin Dashboard - Movies</title>
</head>
<body>

<h1>Admin Dashboard - Manage Movies</h1>

<!-- Back to Admin Home -->
<a href="/admin">
    <button>Back to Admin Home</button>
</a>


<!-- Add Movie Button -->
<div class="container">
    <a href="/admin/add-movie">
        <button>Add New Movie</button>
    </a>
</div>

<!-- Movie List -->
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Director</th>
            <th>Genres</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each movies}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.director}}</td>
                <td>{{this.genres}}</td>
                <td>
                    <!-- Edit Button -->
                    <a href="/admin/edit-movie/{{this._id}}">
                        <button>Edit</button>
                    </a>

                    <!-- Delete Button -->
                    <form action="/admin/delete-movie/{{this._id}}" method="POST" style="display:inline;">
                        <button type="submit" class="delete" onclick="return confirm('Are you sure you want to delete this movie?');">Delete</button>
                    </form>
                </td>
            </tr>
        {{else}}
            <tr>
                <td colspan="4">No movies available.</td>
            </tr>
        {{/each}}
    </tbody>
</table>

</body>
</html>
