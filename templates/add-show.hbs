<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/user.css">
    <title>Add New Show</title>
</head>
<body>

<h1>Add New Show</h1>

<form action="/admin/add-show" method="POST">
    <!-- Title -->
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required><br><br>

    <!-- Description -->
    <label for="description">Description:</label>
    <textarea id="description" name="description" required></textarea><br><br>

    <!-- Cast -->
    <label for="cast">Cast:</label>
    <input type="text" id="cast" name="cast" required><br><br>

    <!-- Rating -->
    <label for="rating">Rating:</label>
    <input type="text" id="rating" name="rating" required><br><br>

    <!-- Duration -->
    <label for="duration">Duration:</label>
    <input type="text" id="duration" name="duration" required><br><br>

    <!-- Listed In -->
    <label for="listed_in">Listed In:</label>
    <input type="text" id="listed_in" name="listed_in" required><br><br>

    <!-- Submit Button -->
    <button type="submit">Add Show</button>
</form>

<!-- Back to Shows List -->
<a href="/admin/shows">
    <button>Back to Shows List</button>
</a>

</body>
</html>
